{% extends 'AppBundle::form.html.twig' %}

{% block title %}Log in Blog{% endblock %}

{% block body %}
	<form action="{{ path('login_check') }}"
	      method="post">
		<h1>Log in</h1>
		<h3>Please, fill in the form</h3>

		{% if error %}
			<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		<label for="username">Username</label>
		<input type="text"
		       id="username"
		       name="_username"
		       value="{{ last_username }}" />
		<br/>

		<label for="password">Password</label>
		<input type="password"
		       id="password"
		       name="_password" />
		<br/>

		<button type="submit">login</button>
		<br/>

		<input type="hidden"
		       name="_target_path"
		       value={{ path('index') }} />
	</form>
{% endblock %}
