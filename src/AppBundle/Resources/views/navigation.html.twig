{% set menu = [
	{name: "Home", path: path('index')},
] %}
{% if app.user %}
	{% set menu = menu | merge([
		{name: "Logout", path: path('logout')},
	]) %}
{% else %}
	{% set menu = menu | merge([
		{name: "Register", path: path('registration')},
		{name: "Login", path: path('login')},
	]) %}
{% endif %}
<nav>
	<ul class="menu">
		{% for item in menu %}
			<li>
				<a href={{ item.path }}>{{ item.name }}</a>
			</li>
		{% endfor %}
	</ul>
</nav>
